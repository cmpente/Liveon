<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Age Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_person"
            android:layout_marginEnd="8dp"
            android:contentDescription="Person icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/age_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45/100"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/age_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="45"
                android:progressTint="@color/primary_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <!-- Health Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_health"
            android:layout_marginEnd="8dp"
            android:contentDescription="Health icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Health"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/health_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/100"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/health_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/health_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <!-- Happiness Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_happiness"
            android:layout_marginEnd="8dp"
            android:contentDescription="Happiness icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Happiness"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/happiness_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50/100"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/happiness_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/happiness_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <!-- Intelligence Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_smarts"
            android:layout_marginEnd="8dp"
            android:contentDescription="Intelligence icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Intelligence"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/intelligence_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/100"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/intelligence_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="20"
                android:progressTint="@color/intelligence_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <!-- Money Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_money"
            android:layout_marginEnd="8dp"
            android:contentDescription="Money icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Money"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/money_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1000/$10000"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/money_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="10000"
                android:progress="1000"
                android:progressTint="@color/money_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <!-- Social Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_relationship"
            android:layout_marginEnd="8dp"
            android:contentDescription="Social icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Social"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/social_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/100"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/social_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/social_color"
                android:progressBackgroundTint="@color/progress_background" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
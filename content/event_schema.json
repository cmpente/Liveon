{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "type": "object",
  "required": ["id", "title", "description", "choices"],
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "result"],
        "required": ["text", "outcomes"],
        "properties": {
          "text": { "type": "string" },
          "conditions": {
            "type": "object",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["stat", "trait", "relationship", "flag"] },
                "name": { "type": "string" },
                "value": { "type": ["integer", "string", "boolean"] },
                "comparison": { "type": "string", "enum": [">", "<", ">=", "<=", "==", "!="] }
              },
              "required": ["type", "name", "value"]
            }
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "conditions": {
                  "type": "array",
                   "items": {
                      "type": "object",
                      "properties": {
                        "type": { "type": "string", "enum": ["stat", "trait", "relationship", "flag"] },
                        "name": { "type": "string" },
                        "value": { "type": ["integer", "string", "boolean"] },
                        "comparison": { "type": "string", "enum": [">", "<", ">=", "<=", "==", "!="] }
                      },
                      "required": ["type", "name", "value"]
                    }
                },
                "statChanges": {
                  "type": "object",
                  "properties": {
                    "health": { "type": "integer" },
                    "happiness": { "type": "integer" },
                    "smarts": { "type": "integer" },
                    "looks": { "type": "integer" },
                    "money": { "type": "integer" },
                    "reputation": { "type": "integer" }
                  },
                  "additionalProperties": false
                },
                "nextEventId": { "type": ["integer", "null"] },
                "unlockAchievementId": { "type": [\"integer\", \"null\"] },
                "consequences": {
                "type": "object",
                "properties": {
                  "health": { "type": "integer" },
                  "happiness": { "type": "integer" },
                  "smarts": { "type": "integer" },
                  "looks": { "type": "integer" },
                  "money": { "type": "integer" },
                  "reputation": { "type": "integer" }
                },
                "additionalProperties": false
              },
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string", "enum": ["addTrait", "removeTrait", "setFlag", "addRelationship", "removeRelationship", "changeRelationshipStatus"] },
                      "name": { "type": "string" },
                      "value": { "type": ["string", "boolean", "integer"] }
                    },
                    "required": ["type", "name", "value"]
                  }
                }
              },
              "required": ["statChanges"]
            }
          }
        }
      },
      "required": ["text", "outcomes"]
    }
  }
}
